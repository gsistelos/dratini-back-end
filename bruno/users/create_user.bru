meta {
  name: create_user
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/users
  body: json
  auth: none
}

body:json {
  {
    "username": "gsistelos",
    "email": "gsistelos@gmail.com",
    "password": "gsistelos123"
  }
}

assert {
  res.status: eq 200
  res.body.username: isDefined test_user
  res.body.email: isDefined test_user@gmail.com
  res.body.createdAt: isDefined
  res.body.updatedAt: isDefined
  res.body.password: isUndefined
  res.body.id: isDefined
}

script:post-response {
  const data = res.getBody()
  
  bru.setEnvVar("userId", data.id)
}
